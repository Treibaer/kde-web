<div class="modal" id="userEditDialog" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" tabindex="-1"
         aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userEditDialogTitle">
                    Create new user
                </h5>
                <div id="userEditDialogUserId" style="display: none"></div>
                <button type="button" class="btn-close editCloseButton" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row g-3  shadow-sm">
                    <div class="col-sm12">
                        <label for="validationServer01" class="form-label">Login name</label>
                        <input type="text" class="form-control" id="userEditDialogUserName">
                    </div>
                    <div class="col-sm-12">
                        <label for="validationServer02" class="form-label">Passwort (no change if empty)</label>
                        <input type="text" class="form-control" id="userEditDialogPassword" >
                    </div>
                    <div class="col-sm-12">
                        <label for="validationServer02" class="form-label">Name</label>
                        <input type="text" class="form-control" id="userEditDialogFullName">
                    </div>
                    <div class="col-sm-12">
                        <label for="validationServer02" class="form-label">Email</label>
                        <input type="text" class="form-control" id="userEditDialogEmail">
                    </div>
                    <div class="col-sm-12">
                        <label for="validationServer02" class="form-label">Rights</label>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="userEditDialogAdmin">
                            <label class="form-check-label" for="flexSwitchCheckDefault">Admin</label>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="userEditDialogCards">
                            <label class="form-check-label" for="flexSwitchCheckChecked">Karten erstellen &bearbeiten</label>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="userEditDialogGames">
                            <label class="form-check-label" for="flexSwitchCheckCheckedDisabled">Spiele erstellen und bearbeiten</label>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="userEditDialogBoards">
                            <label class="form-check-label" for="flexSwitchCheckCheckedDisabled">Bretter erstellen und bearbeiten</label>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="userEditDialogUsers">
                            <label class="form-check-label" for="flexSwitchCheckDisabled">Benutzer sehen & einladen</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary editCloseButton" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="editCreateButton" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>
